#!/bin/bash
if [ $1 == 'z' ]; then
    echo '=========================================================================='
    dmidecode -t 1 | grep "Manufacturer\|Product Name\|Serial Number" | sed 's/	//'
    echo '=========================================================================='
    ifconfig -a | sed '/^	/d'
    echo '=========================================================================='
    ifconfig em0
    echo '=========================================================================='
    cat /tmp/.ha_mode
    echo ''
    echo '=========================================================================='
    getencstat -V `ls /dev/ses*` | grep /dev/ses
    echo '=========================================================================='
    sas2flash -listall
    echo '=========================================================================='
    cat /etc/version
    echo '=========================================================================='
    hactl
    echo '=========================================================================='
elif [ $1 == 'x' ];then
    echo '=========================================================================='
    dmidecode -t 1 | grep "Manufacturer\|Product Name\|Serial Number" | sed 's/	//'
    echo '=========================================================================='
    ifconfig -a | sed '/^	/d'
    echo '=========================================================================='
    ifconfig ntb0
    echo '=========================================================================='
    cat /tmp/.ha_mode
    echo ''
    echo '=========================================================================='
    getencstat -V `ls /dev/ses*` | grep /dev/ses
    echo '=========================================================================='
    sas3flash -listall
    echo '=========================================================================='
    cat /etc/version
    echo '=========================================================================='
    hactl
    echo '=========================================================================='
elif [ $1 == 'm' ];then
    echo '=========================================================================='
    dmidecode -t 1 | grep "Manufacturer\|Product Name\|Serial Number" | sed 's/	//'
    echo '=========================================================================='
    ifconfig -a | sed '/^	/d'
    echo '=========================================================================='
    ifconfig ntb0
    echo '=========================================================================='
    cat /tmp/.ha_mode
    echo ''
    echo '=========================================================================='
    getencstat -V `ls /dev/ses*` | grep /dev/ses
    echo '=========================================================================='
    sas3flash -listall
    echo '=========================================================================='
    cat /etc/version
    echo '=========================================================================='
    hactl
    echo '=========================================================================='
else
    echo 'please enter z, x, or m as the first argument'
fi
